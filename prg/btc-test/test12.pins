#{ test10.pins: Referencing/de-referencing. }#

fun main(): void = ({
    bas1 = 3;
    ptr1 = ^bas1;
    ptr2 = ^ptr1;
    ptr3 = ^ptr2;

    putInt(ptr3^^^);

    bas1 = 7;
    ptr1^ = 9;
    ptr2^^ = 11;
    ptr3^^^ = 13;

}
where
    var bas1 : int;
    var ptr1 : ^int;
    var ptr2 : ^^int;
    var ptr3 : ^^^int;
);


